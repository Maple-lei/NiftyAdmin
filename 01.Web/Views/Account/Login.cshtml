                                <a href="#" class="pad-rgt"><i class="demo-psi-google-plus icon-lg text-danger"></i></a>
                            </div>
                            <div class="media-body text-left">
                                Login with
                            </div>
                        </div>
                    </div>*@
            </div>
        </div>
        <div class="demo-bg">
            <div id="demo-bg-list">
                <div class="demo-loading"><i class="psi-repeat-2"></i></div>
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-1.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-2.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-3.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-4.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-5.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-6.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="/Content/images/login/thumbs/bg-img-7.jpg" alt="Background Image">
